<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <!-- 控制类声明与映射 -->
    <!-- 登录控制类 -->
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>com.control.LoginConfigClass</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>

    <!-- 登修改密码控制类 -->
    <servlet>
        <servlet-name>UpdatePwdServlet</servlet-name>
        <servlet-class>com.control.UpdatePwdControlClass</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>UpdatePwdServlet</servlet-name>
        <url-pattern>/UpdatePwdServlet</url-pattern>
    </servlet-mapping>

    <!-- 修改密码控制类 -->
    <servlet>
        <servlet-name>SelectHomework</servlet-name>
        <servlet-class>com.control.SelectHomeworkControlClass</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>SelectHomework</servlet-name>
        <url-pattern>/SelectHomework</url-pattern>
    </servlet-mapping>

    <!-- 考试控制类 -->
    <servlet>
        <servlet-name>exam</servlet-name>
        <servlet-class>com.control.ExamControlClass</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>exam</servlet-name>
        <url-pattern>/exam</url-pattern>
    </servlet-mapping>

    <!-- 注册账号控制类 -->
    <servlet>
        <servlet-name>Register</servlet-name>
        <servlet-class>com.control.RegisterControlClass</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Register</servlet-name>
        <url-pattern>/Register</url-pattern>
    </servlet-mapping>


    <!-- 静态资源映射 -->
    <!--css文件 -->
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.css</url-pattern>
    </servlet-mapping>

    <!--图片文件 -->
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.jpg</url-pattern>
    </servlet-mapping>

    <!--图片文件 -->
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.JPG</url-pattern>
    </servlet-mapping>

</web-app>